@model IEnumerable<FSD_FinancialPortal.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<div class="page-content">
    <!-- Page Breadcrumb -->
    <div class="page-breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index","Home")">Home</a>
            </li>
            <li class="active">Index</li>
        </ul>
    </div>
    <div class="page-header position-relative">
        <div class="header-title">
            <h1>
                Index
            </h1>
        </div>
        <!--Header Buttons-->
        <div class="header-buttons">
            <a class="sidebar-toggler" href="#">
                <i class="fa fa-arrows-h"></i>
            </a>
            <a class="refresh" id="refresh-toggler" href="">
                <i class="glyphicon glyphicon-refresh"></i>
            </a>
            <a class="fullscreen" id="fullscreen-toggler" href="#">
                <i class="glyphicon glyphicon-fullscreen"></i>
            </a>
        </div>
        <!--Header Buttons End-->
    </div>
    <!-- Page Body -->
    <div class="page-body">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BankAccount.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BudgetItem.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnteredBy.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TransactionType.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Reconciled)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReconciledAmount)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BankAccount.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BudgetItem.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnteredBy.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionType.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reconciled)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReconciledAmount)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
</table>
    </div>
</div>